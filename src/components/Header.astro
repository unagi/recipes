---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2>
			<a href="/">
				<span class="material-icons logo-icon">restaurant</span>
				{SITE_TITLE}
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">
				<span class="material-icons">home</span>
				<span>Home</span>
			</HeaderLink>
			<HeaderLink href="/recipes">
				<span class="material-icons">restaurant_menu</span>
				<span>Recipes</span>
			</HeaderLink>
			<HeaderLink href="/about">
				<span class="material-icons">info</span>
				<span>About</span>
			</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1.5em;
		background: rgb(var(--background-warm));
		box-shadow: 0 2px 12px rgba(var(--gray), 15%);
	}
	h2 {
		margin: 0;
		font-size: 1.25em;
		font-weight: 700;
	}

	h2 a {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: rgb(var(--black));
	}

	h2 .logo-icon {
		font-size: 28px;
		color: rgb(var(--accent));
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.internal-links :global(a) {
		display: flex;
		align-items: center;
		gap: 0.3rem;
		padding: 1em 0.75em;
		color: rgb(var(--gray-dark));
		border-bottom: 3px solid transparent;
		text-decoration: none;
		transition: all 0.2s ease;
		font-weight: 500;
	}

	.internal-links :global(a:hover) {
		color: rgb(var(--accent));
		border-bottom-color: rgb(var(--accent));
	}

	.internal-links :global(a.active) {
		color: rgb(var(--accent));
		border-bottom-color: rgb(var(--accent));
	}

	.internal-links :global(a) .material-icons {
		font-size: 20px;
		color: inherit;
	}

	@media (max-width: 720px) {
		.internal-links :global(a) span:not(.material-icons) {
			display: none;
		}
		.internal-links {
			gap: 0.25rem;
		}
		header {
			padding: 0 1em;
		}
	}
</style>
